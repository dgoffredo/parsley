Path  ::=  terms:(Term ("/" Term)*)

Term  ::=  identifier:IDENTIFIER
        |   wildcard:"*"
        |   function:Function
        |   selection:Selection

Function  ::=  
    name:IDENTIFIER 
    args:("(" (Argument (SEPARATOR Argument)*)? ")")

Argument  ::= identifier:IDENTIFIER
            |  stringLiteral:STRING
            |  integer:INTEGER

Selection  ::=  array:IDENTIFIER "[" index:INTEGER "]"

IDENTIFIER  ::=  /[a-zA-Z_][0-9a-zA-Z_]*/

INTEGER  ::=  /0|[1-9][0-9]*/

STRING  ::=  /"([^\\]|\\.)*"/

SEPARATOR  ::=  /\s*,\s*/